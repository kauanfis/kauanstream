import {Plus, Upload, X} from 'lucide-react'
import { useState } from "react"
import { useMovies } from "../hooks/useMovies"
import { lumi } from "../lib/lumi"
import toast from "react-hot-toast"

interface AdminPanelProps {
  onClose: () => void
  editMovie?: any
}

const categories = [
  "action", "adventure", "animation", "comedy", "crime", "documentary",
  "drama", "family", "fantasy", "horror", "mystery", "romance", "scifi", "thriller", "western"
]

export function AdminPanel({ onClose, editMovie }: AdminPanelProps) {
  const { createMovie, updateMovie } = useMovies()
  const [uploading, setUploading] = useState(false)
  const [formData, setFormData] = useState({
    title: editMovie?.title || "",
    description: editMovie?.description || "",
    posterUrl: editMovie?.posterUrl || "",
    year: editMovie?.year || new Date().getFullYear(),
    duration: editMovie?.duration || 120,
    category: editMovie?.category || "action",
    tags: editMovie?.tags?.join(", ") || "",
    youtubeUrl: editMovie?.youtubeUrl || "",
    googleDriveUrl: editMovie?.googleDriveUrl || "",
    watchLinks: editMovie?.watchLinks || [{ platform: "", url: "" }],
    status: editMovie?.status || "active",
  })

  const handleFileUpload = async (e: React.ChangeEvent<HTMLInputElement>) => {
    const files = e.target.files
    if (!files || files.length === 0) return

    setUploading(true)
    try {
      const results = await lumi.tools.file.upload(Array.from(files))
      const uploaded = results.find((r) => r.fileUrl)
      
      if (uploaded?.fileUrl) {
        setFormData({ ...formData, posterUrl: uploaded.fileUrl })
        toast.success("Poster uploaded successfully!")
      } else {
        toast.error("Failed to upload poster")
      }
    } catch (error) {
      console.error("Upload error:", error)
      toast.error("Upload failed")
    } finally {
      setUploading(false)
    }
  }

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault()

    const user = lumi.auth.user
    if (!user) {
      toast.error("You must be logged in")
      return
    }

    try {
      const movieData = {
        title: formData.title,
        description: formData.description,
        posterUrl: formData.posterUrl,
        year: parseInt(formData.year.toString()),
        duration: parseInt(formData.duration.toString()),
        category: formData.category,
        tags: formData.tags.split(",").map((t) => t.trim()).filter(Boolean),
        youtubeUrl: formData.youtubeUrl,
        googleDriveUrl: formData.googleDriveUrl,
        watchLinks: formData.watchLinks.filter((l) => l.platform && l.url),
        status: formData.status,
        creator: user.userId,
      }

      if (editMovie) {
        await updateMovie(editMovie._id, movieData)
      } else {
        await createMovie(movieData)
      }
      
      onClose()
    } catch (error) {
      console.error("Save error:", error)
    }
  }

  const addWatchLink = () => {
    setFormData({
      ...formData,
      watchLinks: [...formData.watchLinks, { platform: "", url: "" }]
    })
  }

  const removeWatchLink = (index: number) => {
    setFormData({
      ...formData,
      watchLinks: formData.watchLinks.filter((_, i) => i !== index)
    })
  }

  const updateWatchLink = (index: number, field: "platform" | "url", value: string) => {
    const updated = [...formData.watchLinks]
    updated[index][field] = value
    setFormData({ ...formData, watchLinks: updated })
  }

  return (
    <div className="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4 overflow-y-auto">
      <div className="relative w-full max-w-3xl bg-slate-900 rounded-2xl shadow-2xl my-8">
        <div className="sticky top-0 bg-slate-900 border-b border-slate-800 p-6 rounded-t-2xl z-10">
          <div className="flex items-center justify-between">
            <h2 className="text-2xl font-bold text-white">
              {editMovie ? "Editar Filme" : "Adicionar Novo Filme"}
            </h2>
            <button
              onClick={onClose}
              className="p-2 hover:bg-slate-800 rounded-lg transition-colors"
            >
              <X className="w-6 h-6 text-white" />
            </button>
          </div>
        </div>

        <form onSubmit={handleSubmit} className="p-6 space-y-6">
          {/* Poster Upload */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              Poster do Filme
            </label>
            <div className="flex items-center space-x-4">
              {formData.posterUrl && (
                <img
                  src={formData.posterUrl}
                  alt="Poster preview"
                  className="w-24 h-36 object-cover rounded-lg"
                />
              )}
              <label className="flex items-center space-x-2 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg cursor-pointer transition-colors">
                <Upload className="w-4 h-4" />
                <span>{uploading ? "Uploading..." : "Upload Poster"}</span>
                <input
                  type="file"
                  accept="image/*"
                  onChange={handleFileUpload}
                  disabled={uploading}
                  className="hidden"
                />
              </label>
            </div>
          </div>

          {/* Title */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              Título
            </label>
            <input
              type="text"
              required
              value={formData.title}
              onChange={(e) => setFormData({ ...formData, title: e.target.value })}
              className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          {/* Description */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              Descrição
            </label>
            <textarea
              required
              rows={4}
              value={formData.description}
              onChange={(e) => setFormData({ ...formData, description: e.target.value })}
              className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          {/* Year and Duration */}
          <div className="grid grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-semibold text-gray-300 mb-2">
                Ano
              </label>
              <input
                type="number"
                required
                value={formData.year}
                onChange={(e) => setFormData({ ...formData, year: parseInt(e.target.value) })}
                className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              />
            </div>
            <div>
              <label className="block text-sm font-semibold text-gray-300 mb-2">
                Duração (min)
              </label>
              <input
                type="number"
                required
                value={formData.duration}
                onChange={(e) => setFormData({ ...formData, duration: parseInt(e.target.value) })}
                className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              />
            </div>
          </div>

          {/* Category */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              Categoria
            </label>
            <select
              value={formData.category}
              onChange={(e) => setFormData({ ...formData, category: e.target.value })}
              className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 cursor-pointer"
            >
              {categories.map((cat) => (
                <option key={cat} value={cat}>
                  {cat.charAt(0).toUpperCase() + cat.slice(1)}
                </option>
              ))}
            </select>
          </div>

          {/* Tags */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              Tags (separadas por vírgula)
            </label>
            <input
              type="text"
              value={formData.tags}
              onChange={(e) => setFormData({ ...formData, tags: e.target.value })}
              placeholder="Ex: suspense, psicológico, cult"
              className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          {/* YouTube URL */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              YouTube URL ou ID
            </label>
            <input
              type="text"
              required
              value={formData.youtubeUrl}
              onChange={(e) => setFormData({ ...formData, youtubeUrl: e.target.value })}
              placeholder="Ex: dQw4w9WgXcQ ou https://youtube.com/watch?v=..."
              className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
            />
          </div>

          {/* Google Drive URL */}
          <div>
            <label className="block text-sm font-semibold text-gray-300 mb-2">
              Google Drive URL (opcional)
            </label>
            <input
              type="text"
              value={formData.googleDriveUrl}
              onChange={(e) => setFormData({ ...formData, googleDriveUrl: e.target.value })}
              placeholder="Ex: https://drive.google.com/file/d/..."
              className="w-full px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
            />
            <p className="text-xs text-gray-500 mt-1">Se fornecido, terá prioridade sobre YouTube</p>
          </div>

          {/* Watch Links */}
          <div>
            <div className="flex items-center justify-between mb-2">
              <label className="block text-sm font-semibold text-gray-300">
                Links para Assistir (plataformas legais)
              </label>
              <button
                type="button"
                onClick={addWatchLink}
                className="flex items-center space-x-1 text-sm text-red-400 hover:text-red-300"
              >
                <Plus className="w-4 h-4" />
                <span>Adicionar</span>
              </button>
            </div>
            
            <div className="space-y-3">
              {formData.watchLinks.map((link, index) => (
                <div key={index} className="flex space-x-2">
                  <input
                    type="text"
                    placeholder="Plataforma (ex: Netflix)"
                    value={link.platform}
                    onChange={(e) => updateWatchLink(index, "platform", e.target.value)}
                    className="flex-1 px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                  />
                  <input
                    type="url"
                    placeholder="URL"
                    value={link.url}
                    onChange={(e) => updateWatchLink(index, "url", e.target.value)}
                    className="flex-1 px-4 py-2 bg-slate-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
                  />
                  <button
                    type="button"
                    onClick={() => removeWatchLink(index)}
                    className="p-2 bg-red-600 hover:bg-red-700 rounded-lg transition-colors"
                  >
                    <X className="w-5 h-5 text-white" />
                  </button>
                </div>
              ))}
            </div>
          </div>

          {/* Submit Button */}
          <div className="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              onClick={onClose}
              className="px-6 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition-colors"
            >
              Cancelar
            </button>
            <button
              type="submit"
              className="px-6 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold transition-colors"
            >
              {editMovie ? "Atualizar" : "Adicionar"}
            </button>
          </div>
        </form>
      </div>
    </div>
  )
}
